using System;

namespace  JohnCSLO1Asmt02;
					
public class Program
{
	public static void Main(string[] args)
	{
		int number, factorial = 1; // Asigning factorial
		
		Console.WriteLine("Please enter a number"); // Requests number from user
		
		number = Convert.ToInt32(Console.ReadLine());
		
		if (number < 0); //Checks to confirm number is greater than zero
		
		else if ( number <= 1)
			Console.WriteLine("{0} = {1}",number, factorial);
		 else {
			   for (int counter = number; counter >= 2; counter -- ) // performing factorial function
			      {
				    factorial = factorial * counter;
			      }
			
			   Console.WriteLine("{0} = {1}",number, factorial); // Returns factorial
		      }
	}
}
